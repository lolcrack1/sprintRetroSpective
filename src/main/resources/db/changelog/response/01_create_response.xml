<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
    <changeSet author="nit182" id="1">
        <createTable tableName="response">
            <column autoIncrement="true" name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="ref_swimlane" type="INTEGER">
                <constraints nullable="false" foreignKeyName="fk_response_swimlane" references="swimlane(id)"/>
            </column>
            <column name="likes" type="INTEGER"></column>
            <column name="comments" type="VARCHAR(255)"></column>
        </createTable>
    </changeSet>
</databaseChangeLog>